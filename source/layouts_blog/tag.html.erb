---
pageable: true
per_page: 12
---
<h1>Photos tagged '<%= tagname %>'</h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="thumbs">
  <% page_articles.reverse.each_with_index do |article, i| %>
  	<li>
		<% link_to article do %>
			<img src="/photos/<%= article.date.strftime('%Y-%m-%d')  %>-144.jpg" alt="<%= article.title %>" title="<%= article.title %>" class="thumb<%= article.data.aspectratio %>"/>
		<% end %>
  	</li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
