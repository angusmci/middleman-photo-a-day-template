---
pageable: true
---
<h1>
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%B %Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="thumbs clearfix">
  <% page_articles.reverse.each_with_index do |article, i| %>
  	<li>
		<% link_to article do %>
			<img src="/photos/<%= article.date.strftime('%Y-%m-%d')  %>-144.jpg" alt="<%= article.title %>" title="<%= article.title %>" class="thumb<%= article.data.aspectratio %>"/>
		<% end %>
  	</li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
